<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MapsActivity">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activities.MapsActivity" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/customborderblack"
            android:elevation="10dp"
            android:layout_margin="10dp">


        </RelativeLayout>

        <Button
            android:id="@+id/btnValidateLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Validate"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/custombtn"
            android:layout_marginLeft="100dp"
            android:layout_marginRight="100dp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_marginTop="110dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageViewWind"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@+id/textViewWind"
                app:srcCompat="@drawable/wind"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:id="@+id/textViewWind"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:text="10m/s"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textViewWindDirection"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:text="N"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <ImageView
                android:id="@+id/imageViewElevation"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_above="@+id/textViewWind"
                android:layout_marginLeft="15dp"
                app:srcCompat="@drawable/elevation" />

            <TextView
                android:id="@+id/textViewElevation"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_centerVertical="true"
                android:text="-130m"
                android:textColor="@color/black"
                android:textSize="14dp" />
        </LinearLayout>
        />

    </RelativeLayout>


</RelativeLayout>

